                <graphic>
                    <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@icons/session.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <ImageView fitHeight="5.0" fitWidth="114.0" preserveRatio="true">
                <image>
                    <Image url="@icons/btnBreak.png" />
                </image>
            </ImageView>

            <Button fx:id="btnHome2" contentDisplay="TOP" layoutY="42.0" mnemonicParsing="false" prefHeight="78.0" prefWidth="127.0" text="Users">
                <graphic>
                    <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@icons/users.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <ImageView fitHeight="5.0" fitWidth="114.0" preserveRatio="true">
                <image>
                    <Image url="@icons/btnBreak.png" />
                </image>
            </ImageView>

            <Button fx:id="btnHome3" contentDisplay="TOP" layoutY="42.0" mnemonicParsing="false" prefHeight="78.0" prefWidth="127.0" text="Admin">
                <graphic>
                    <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@icons/admin.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <ImageView fitHeight="5.0" fitWidth="114.0" preserveRatio="true">
                <image>
                    <Image url="@icons/btnBreak.png" />
                </image>
            </ImageView>

            <Button fx:id="btnHome4" contentDisplay="TOP" layoutY="42.0" mnemonicParsing="false" prefHeight="78.0" prefWidth="127.0" text="Settings">
                <graphic>
                    <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@icons/settings.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>


        </VBox>
    </left>

    <bottom>
        <HBox style="-fx-background-color: white">
            <Label text="Created by Group Name" />
        </HBox>
    </bottom>

    <center>
        <StackPane fx:id="acContent" prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <BorderPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: white" />
            </children>
        </StackPane>
   </center>

