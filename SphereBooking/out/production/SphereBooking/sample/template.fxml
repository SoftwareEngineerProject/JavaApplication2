<BorderPane stylesheets="@styles.css" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">

    <top>
        <HBox alignment="CENTER" style="-fx-background-color: #282E34; -fx-padding: 10">
